{
    "name": "ccstatusline",
    "version": "2.0.9",
    "description": "A customizable status line formatter for Claude Code CLI",
    "module": "src/ccstatusline.ts",
    "type": "module",
    "bin": {
        "ccstatusline": "dist/ccstatusline.js"
    },
    "files": [
        "dist/"
    ],
    "scripts": {
        "start": "bun run patch && bun run src/ccstatusline.ts",
        "statusline": "bun run src/ccstatusline.ts",
        "patch": "patch-package",
        "build": "bun run patch && rm -rf dist/* && bun build src/ccstatusline.ts --target=node --outfile=dist/ccstatusline.js --target-version=14",
        "postbuild": "bun run scripts/replace-version.ts",
        "prepublishOnly": "bun run build",
        "lint": "bun x biome check --write",
        "test": "bun x vitest"
    },
    "devDependencies": {
        "@biomejs/biome": "2.2.2",
        "@types/bun": "latest",
        "@types/react": "^19.1.10",
        "chalk": "^5.5.0",
        "ink": "^6.2.0",
        "ink-gradient": "^3.0.0",
        "ink-select-input": "^6.2.0",
        "lefthook": "^1.12.3",
        "patch-package": "^8.0.0",
        "react": "^19.1.1",
        "react-devtools-core": "^6.1.5",
        "strip-ansi": "^7.1.0",
        "tinyglobby": "^0.2.14",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.1",
        "vitest": "^3.2.4",
        "zod": "^4.0.17"
    },
    "keywords": [
        "claude",
        "claude-code",
        "cli",
        "status-line",
        "terminal"
    ],
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sirmalloc/ccstatusline.git"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "trustedDependencies": [
        "lefthook",
        "unrs-resolver"
    ]
}
